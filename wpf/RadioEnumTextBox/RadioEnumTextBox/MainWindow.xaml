<Window x:Class="RadioEnumTextBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioEnumTextBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <StackPanel.Resources>
            <local:EnumToIDConverter x:Key="EnumToIDConverter"/>
        </StackPanel.Resources>
        <TextBox x:Name="ColorBox"/>
        <RadioButton GroupName="ColorGroup" Content="None" IsChecked="{Binding ElementName=ColorBox, Path=Text, Converter={StaticResource EnumToIDConverter}, ConverterParameter={x:Static local:Colors.None}}"/>
        <RadioButton GroupName="ColorGroup" Content="Red" IsChecked="{Binding ElementName=ColorBox, Path=Text, Converter={StaticResource EnumToIDConverter}, ConverterParameter={x:Static local:Colors.Red}}"/>
        <RadioButton GroupName="ColorGroup" Content="Green" IsChecked="{Binding ElementName=ColorBox, Path=Text, Converter={StaticResource EnumToIDConverter}, ConverterParameter={x:Static local:Colors.Green}}"/>
        <RadioButton GroupName="ColorGroup" Content="Blue" IsChecked="{Binding ElementName=ColorBox, Path=Text, Converter={StaticResource EnumToIDConverter}, ConverterParameter={x:Static local:Colors.Blue}}"/>
        <Button x:Name="SetBtn" Content="Set" Click="SetBtn_Click"/>
        <Button x:Name="ShowBtn" Content="Show" Click="ShowBtn_Click"/>
    </StackPanel>
</Window>
