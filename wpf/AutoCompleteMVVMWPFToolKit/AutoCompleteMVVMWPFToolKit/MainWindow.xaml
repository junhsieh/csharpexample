<Window x:Class="AutoCompleteMVVMWPFToolKit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoCompleteMVVMWPFToolKit"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        xmlns:toolkit1="clr-namespace:System.Windows.Controls;assembly=WPFToolkit"
        xmlns:toolkit2="clr-namespace:System.Windows.Controls;assembly=DotNetProjects.Input.Toolkit" ContentRendered="Window_ContentRendered">
    <StackPanel>
        <StackPanel.DataContext>
            <local:MainWindowViewModel x:Name="MainWindowViewModel"/>
        </StackPanel.DataContext>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Item Name:"/>
            <toolkit2:AutoCompleteBox Grid.Row="0" Grid.Column="1" Width="400"
                                      x:Name="IDItemBox"
                                      ItemsSource="{Binding Path=SalOrder.IDItemOptArr}"
                                      SelectedItem="{Binding Path=SalOrder.IDItem, Mode=TwoWay}"
                                      ValueMemberPath="Text"
                                      IsTextCompletionEnabled="False"
                                      FilterMode="Contains"
                                      ItemFilter="{Binding Path=SalOrder.IDItemOptArrFilter}"
                                      >
                <toolkit2:AutoCompleteBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=Text}"/>
                            <TextBlock Text="{Binding Path=ID.IDItem}" Background="Green" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding Path=ID.ItemNum}" Background="Yellow" Margin="10,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </toolkit2:AutoCompleteBox.ItemTemplate>
            </toolkit2:AutoCompleteBox>
        </Grid>
        <Button x:Name="DebugBtn" Content="Debug" Click="DebugBtn_Click"/>
    </StackPanel>
</Window>
